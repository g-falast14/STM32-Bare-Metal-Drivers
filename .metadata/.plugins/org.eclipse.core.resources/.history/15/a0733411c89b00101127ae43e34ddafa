#include "stm32f4xx.h"

#define GPIOBEN 	(1U<<1)
#define I2C1EN		(1U<<21)

// pinout
// PB8: SCL
// PB9: SDA
void I2C1_init(void) {

	// enable clock access to GPIOB
	RCC->AHB1ENR |= GPIOBEN;

	// set PB8 and PB9 mode to alternate function
	GPIOB->MODER &= ~(1U<<16);
	GPIOB->MODER &= ~(1U<<17);

	GPIOB->MODER &= ~(1U<<18);
	GPIOB->MODER &= ~(1U<<19);

	// Set PB8 and PB9 output type to open drain
	GPIOB->OTYPER &= ~(1U<<8);
	GPIOB->OTYPER &= ~(1U<<9);

	// enable Pull-up for PB8 and PB9
	GPIOB->PUPDR |= (1U<<16);
	GPIOB->PUPDR |= (1U<<17);

	GPIOB->PUPDR |= (1U<<18);
	GPIOB->PUPDR |= (1U<<19);



}








