	__disable_irq();

	// enable clock access for GPIOC


	// enable clock access to SYSCFG

	// select PORTC for EXTI13

	// unmask EXTI13

	// select falling edge trigger

	// enable EXTI line in NVIC

	// re-enable global interrupt
	__enable_irq();

}

