#define SR_RXNE		(1U<<5)
#define HISR_TCIF6	(1U<<21)

void uart2_rxtx_init(void);
char uart2_read(void);
void uart2_rx_interrupt_init(void);
void dma1_stream6_init(uint32_t source, uint32_t destination, uint32_t length);

#endif /* UART_H_ */
